@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/assets/css/adminStyle.css" type="text/css" />
    <link rel="stylesheet" href="~/assets/css/all.css" type="text/css" />
    <link rel="stylesheet" href="~/assets/webfonts/" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter" type="text/css" />
    <title>CV | @ViewBag.baslik</title>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="row main-bar">
        <div class="col-4">
            <div class="hamburger-menu">
                <input id="menu__toggle" type="checkbox" />
                <label class="menu__btn" for="menu__toggle">
                    <span></span>
                </label>

                <ul class="menu__box">
                    <li>
                        <a class="menu__item" href="/panelprofil/profil"><i class="fa-solid fa-circle-user"></i>Profil</a>
                    </li>
                    <li>
                        <a class="menu__item" href="/panelabout/about"><i class="fa-solid fa-user-pen"></i>Hakkımda</a>
                    </li>
                    <li>
                        <a class="menu__item" href="/paneleducation/education"><i class="fa-solid fa-graduation-cap"></i>Eğitim</a>
                    </li>
                    <li><a class="menu__item" href="/panelexperiance/experiance"><i class="fa-solid fa-briefcase"></i>Deneyim</a></li>
                    <li>
                        <a class="menu__item" href="/panelproject/project"><i class="fa-solid fa-paperclip"></i>Projeler</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-4">
            <h3>@ViewBag.baslik</h3>
        </div>
        <div class="col-4 admin-profil">
            <div class="hamburger-menu-2">
                <input id="menu__toggle-2" type="checkbox" />
                <label class="menu__btn-2" for="menu__toggle-2">
                    <span><i class="fa-regular fa-user top-sidebar-1-icon"></i></span>
                </label>

                <ul class="menu__box-2">
                    <li>
                        <span class="admin-name">Semih KARAAĞAÇLI</span>
                    </li>
                    <li>
                        <a class="menu__item-2" href="/Login/LogOut"><i class="fa-solid fa-arrow-right-from-bracket top-sidebar-3-icon"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class=" row icerik">
        @RenderBody()
    </div>
</body>
</html>